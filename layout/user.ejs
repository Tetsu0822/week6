<div class="row gap-7 mb-9">
    <div class="col-12 col-lg-3">
        <h2 class="h3">個人資料</h2>
    </div>
    <div class="col-12 col-lg">
        <div class="mb-6 text-nowrap">
            <img src="../assets/images/avatar.png" alt="user-image"
                class="user-image rounded-circle me-4 align-bottom" />
            <label for="upload-avatar" class="form-label border rounded-2 py-3 px-5">
                <span class="material-symbols-outlined align-bottom">
                    upload
                </span>更新頭貼</label>
            <input class="form-control d-none" type="file" id="upload-avatar">
        </div>
        <!-- 姓名 -->
        <div class="form-floating mb-6">
            <input type="text" class="form-control" id="username" value="Mokumaru">
            <label for="username">姓名</label>
        </div>
        <!-- 性別 -->
        <p class="mb-2">性別</p>
        <div class="mb-6">
            <div class="form-check form-check-inline">
                <input class="form-check-input" name="sex" type="radio" id="sex1" value="女性" checked>
                <label class="form-check-label" for="sex1">女性</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" name="sex" type="radio" id="sex2" value="男性">
                <label class="form-check-label" for="sex2">男性</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" name="sex" type="radio" id="sex3" value="不願透露">
                <label class="form-check-label" for="sex3">不願透露</label>
            </div>
        </div>
        <!-- 生日 -->
        <div class="form-floating mb-6">
            <input type="text" class="form-control" id="birthday" value="2000/01/10">
            <label for="birthday">生日</label>
        </div>
        <!-- 密碼 -->
        <div class="mb-6">
            <p class="mb-2">密碼</p>
            <!-- Button trigger modal -->
            <button type="button" class="btn rounded-3 bg-natural-0 border pe-3" data-bs-toggle="modal"
                data-bs-target="#exampleModal">
                修改密碼
                <span class="material-symbols-outlined align-bottom">
                    chevron_right
                </span>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">更新密碼</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-floating mb-6">
                                <input type="password" class="form-control" id="floatingPassword"
                                    placeholder="新密碼">
                                <label for="floatingPassword">新密碼</label>
                            </div>
                            <div class="form-floating mb-6">
                                <input type="password" class="form-control" id="secondPassword"
                                    placeholder="再次密碼">
                                <label for="secondPassword">再次密碼</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-dark py-3 ps-5 pe-3">更新密碼
                                <span class="material-symbols-outlined align-bottom">
                                    chevron_right
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- 信箱 -->
        <div class="form-floating mb-6">
            <input type="email" class="form-control" id="mailbox" placeholder="email">
            <label for="mailbox">信箱</label>
            <div id="emailHelp" class="form-text ms-2">盡量勿使用Yahoo或Hotmail郵件信箱，以免因擋信、漏信</div>
        </div>
        <!-- 聯絡電話 -->
        <div class="form-floating mb-6">
            <input type="tel" class="form-control" id="floatingTel" value="09-1234-5678">
            <label for="floatingTel">聯絡電話</label>
        </div>
        <!-- 通訊地址 -->
        <div class="form-floating mb-6">
            <input type="tel" class="form-control" id="floatingAddress" value="高雄市三民區九如一路 87 號">
            <label for="floatingAddress">通訊地址</label>
        </div>
    </div>
</div>
<div class="d-grid gap-2 d-lg-block d-lg-flex justify-content-lg-center">
    <button type="button" class="btn rounded-4 bg-natural-0 border me-0 me-lg-5 pe-3 mb-4 mb-lg-0">重新填寫
        <span class="material-symbols-outlined align-bottom">
            chevron_right
        </span>
    </button>
    <button type="button" class="btn rounded-4 btn-dark pe-3">儲存更新
        <span class="material-symbols-outlined align-bottom">
            chevron_right
        </span>
    </button>
</div>
